{{!-- burger image and header --}}
<header class="header">
  <div class="row image">
    <img src="./assets/img/burgerImage.PNG" alt="burger" >
  </div>
  <h1>Eat Da Burger!</h1>
</header>

<div class="row">

  <div class="col-md-1"> </div>

  <div class="col-md-5">
  <h2>Burger list</h2>

    <!-- Bootstrap list group - basic example -->
    <ul class="list-group">
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block eating=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="col-md-5">
    <!-- Bootstrap list group - basic example for devoured burgers-->
    <ul class="list-group">
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block eating=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
    
</div>
  

